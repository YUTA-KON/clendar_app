<div class="container">
    <div class="row">
        <div class="mx-auto">
            <h1><strong>予定の編集</strong></h1>
            <% if @plan.errors.any? %>
                <h2><%= @plan.errors.count %>件のerrorが発生しました</h2>
                <ul>
                    <%= @plan.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
            <%= form_with model:@plan, local:true do |f| %>
                <h4>タイトル</h4>
                <%=f.text_field :title %>
                <h4>メモ</h4>
                <%=f.text_area :body %><br>
                <%=f.submit 'アップデート',class:"btn btn-lg btn-block btn-info mt-4" %>
            <% end %>
            <%= link_to "キャンセル", plan_path(@plan.id) %>
        </div>
    </div>
</div>