<div class="container">
    <div class="row ">
        <div class="mx-auto">
            <h1><strong>Editing User</strong></h1>
            <% if @user.errors.any? %>
                <h2><%= @user.errors.count %>件のerrorが発生しました</h2>
                <ul>
                    <%= @user.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>

            <%= form_with model:@user, local:true do |f| %>
                <h4>ニックネーム<span style="color: red;">(必須)</span></h4>
                <%=f.text_field :name %>
                <h4>プロフィール画像</h4>
                <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
                <h4>自己紹介</h4>
                <%=f.text_area :introduction %>
                <h4>イメージカラー<span style="color: red;">(必須)</span></h4>
                <%= f.select :color, [["赤", 'red'], ["青", 'blue'], ["黄", 'yello'], ["紫", 'purple'], ["ピンク", 'pink'], ["水色", 'skyble'], ["黄緑", 'lightgreen']] %>

                <%=f.submit 'Update User' %>
            <% end %>
        </div>
    </div>
</div>