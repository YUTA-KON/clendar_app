<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-6 border">
            <h2>お知らせ投稿</h2>
            <%= form_with model: @notification, local:true do |f| %>

                <div style="margin-bottom:20px;">
                    <%=f.label :title, "タイトル"%><br>
                    <%= f.text_field :title, placeholder: "予定のタイトル" %>
                </div>

                <div style="margin-bottom:20px;">
                    <%=f.label :body, "メモ"%><br>
                    <%= f.text_area :body, rows:"3", placeholder: "予定の詳細や持ち物など"%>
                </div>

                <%= f.submit 'お知らせ', class:"btn btn-lg btn-block btn-info mt-4" %>
            <% end %>
        </div>
    </div>
    <%= link_to 'back', user_path(current_user) %>
</div>