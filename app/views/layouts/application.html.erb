<!DOCTYPE html>
<html>
  <head>
    <title>CalendarApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/1828368dbc.js" crossorigin="anonymous"></script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body data-turbolinks="false">
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, class: name %>
    <% end %>
    <header class="navbar-dark bg-dark">
      <nav class="navbar navbar-expand-lg">
        <div class="container">
          <h3><a class="p-3" href="/">CalendarApp</a></h3>
          <div class="col_md_8">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to user_path(current_user.id), class: 'nav-link text-white' do%>
                <i class="fas fa-home"></i>マイページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to users_path, class: 'nav-link text-white' do%>
                <i class="fas fa-users"></i>ユーザー一覧
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to groups_path, class: 'nav-link text-white' do%>
                <i class="fas fa-book-open"></i>グループ一覧
              <% end %>
            </li>
              <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link text-white' do%>
                <i class="fas fa-sign-out-alt"></i>ログアウト
              <% end %>
            </li>
            <% else %>
            <li class="nav-item">
              <%= link_to root_path, class: 'nav-link text-white' do%>
                <i class="fas fa-home"></i>トップページ
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to about_path, class: 'nav-link text-white' do%>
                <i class="fas fa-link"></i>このサイトについて
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_registration_path, class: 'nav-link text-white' do%>
                <i class="fas fa-user-plus"></i>ユーザー登録
              <% end %>
            </li>
            <li class="nav-item">
              <%= link_to new_user_session_path, class: 'nav-link text-white' do%>
                <i class="fas fa-sign-in-alt"></i>ログイン
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <%= yield %>
    </main>

    <footer class="bg-dark text-white pt-5 pb-4">
      <div class="container">
        <div class="row no-gutters">
          <div class="col-md-4">
            <p>test</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
