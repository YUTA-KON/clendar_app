<div class="container px-5 px-sm-0">
    <div class="row">
<p id="notice"><%= notice %></p>
<div class="col-md-3 border">
    <h2>新規グループ</h2>
    <%= form_with model: @group, local:true do |f| %>
        <%= f.text_field :name, placeholder: "グループ名"%><br>
        <%= f.password_field :password, placeholder: "パスワードを入力" %><br>
        <%= f.submit 'グループ作成', class:"btn btn-secondary" %>
    <% end %>
</div>
<div class="col-md-3 border">
    <h2>グループ加入</h2>
    <% gr_temp=Group.new %>
    <%= form_with model: gr_temp, url: join_path, local: true do |f| %>
        <%= f.text_field :name, placeholder: "グループ名"%><br>
        <%= f.text_field :password, placeholder: "パスワードを入力" %><br>
        <%= f.submit "加入する", class: 'btn btn-secondary'%>
    <% end %>
</div>
<div class="col-md-5 border">
    <h2>グループ一覧</h2>
    <table>
        <% @groups.each do |group| %>
            <tr>
                <td>
                    <strong><%= group.name %></strong>
                </td>
            </tr>
        <% end %>
    </table>
</div>
</>
</div>